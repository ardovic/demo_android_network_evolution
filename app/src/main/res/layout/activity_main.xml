<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/edit_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_search_string"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_search_direct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_search_direct" />

    <Button
        android:id="@+id/btn_search_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_search_thread" />

    <Button
        android:id="@+id/btn_search_async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_search_async" />

</LinearLayout>
